<div class="btn-group pull-right" data-bind="with: dropmenu">
  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    <i class="icon-user"></i> {{username}} 
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu" data-bind="foreach: options">
    <!-- ko ifnot: divider -->
    <li>
      <a data-bind="attr: { href: href }, text: title, click: $parent.onOptionClick"></a>
    </li>
    <!-- /ko -->
    <!-- ko if: divider -->
    <li class="divider"></li>
    <!-- /ko -->
  </ul>
</div>