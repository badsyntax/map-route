<div class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 data-bind="text: heading"></h3>
  </div>
  <div class="modal-body" data-bind="html: content">
  </div>
  <div class="modal-footer" data-bind="visible: controls(), template: { foreach: buttons }">
    <button data-dismiss="modal" data-bind="
      click: action, 
      text: title, 
      attr: { 'class': 'btn ' + type() }
    "></button>
  </div>
</div>