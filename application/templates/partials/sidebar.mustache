<div class="row">
  <h1>
    MapRoute
  </h1>
</div>

<div class="row">
  <div class="search input-append">
    <input class="input-block-level" id="search-input" type="text" placeholder="Search for a place...">

    <button type="button" rel="tooltip" class="btn" data-toggle="button" data-original-title="Drop pins on search">  
      <i class="icon-map-marker"></i>
    </button>
  </div>
</div>

<div class="row">
  <ul class="nav nav-tabs" id="sidebar-tabs">
    <li class="active"><a href="#sidebar-route">Route</a></li>
    <li><a href="#sidebar-pins">Pins</a></li>
  </ul>
</div>

<div class="row">
   
  <div class="tab-content">
    <div class="tab-pane active scroller" id="sidebar-route">
      <div class="scrollbar"><div class="track"><div class="thumb"></div></div></div>
      <div class="viewport">
        <div class="overview">
        <!-- ko if: route().length -->
        <ul class="routes nav nav-pills nav-stacked" data-bind="
          click: onRoutePointClick,
          template: { 
            foreach: route, 
            afterAdd: fadeIn, 
            beforeRemove: fadeOut
          }">
          <li data-bind="css: { active: model.isActive }">
            <a href="#">
              <!-- ko text: model.route_title --><!-- /ko -->
              <span class="actions btn-group">
                <button class="btn edit">
                  <i class="icon-edit"></i>
                </button>
                <button class="btn remove">
                  <i class="icon-remove"></i>
                </button>
              </span>
            </a>
          </li>
        </ul>
        <!-- /ko -->
        <p data-bind="ifnot: route().length" style="margin:0;padding:0 10px">
          <em>No route set. Once you've added some pins you can plan a route.</em>
        </p>
      </div>
    </div>
    </div>
    <div class="tab-pane" id="sidebar-pins">
      <ul class="nav nav-pills nav-stacked" data-bind="foreach: markers">
        <li>
          <a href="#" data-bind="text: model.title()"></a>
        </li>
      </ul>
    </div>
  </div>
</div>