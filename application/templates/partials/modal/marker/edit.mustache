<form class="form-horizontal">
  <div class="control-group">
    <label class="control-label" for="inputTitle">Title</label>
    <div class="controls">
      <input type="text" id="inputTitle" placeholder="Enter title" class="input-xlarge" data-bind="value: title" />
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputLatLng">Location</label>
    <div class="controls">
      <input type="text" id="inputSearchLocation" placeholder="Search for a location..." class="input-xlarge" data-bind="value: location" />
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputDescription">Description</label>
    <div class="controls">
      <textarea id="inputDescription" placeholder="Enter description" rows="5" class="input-xlarge" data-bind="value: description"></textarea>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputDate">Date</label>
    <div class="controls">
      <input type="text" id="inputDate" placeholder="Enter date" class="input-xlarge" data-bind="value: date_formatted" />
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputLatLng">Lat/Long</label>
    <div class="controls">
      <input type="text" id="inputLatLng" placeholder="Enter latitude and longitude" class="input-xlarge" data-bind="value: latlng" /> 
    </div>
  </div>
</form>