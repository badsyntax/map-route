<form class="form-horizontal" data-bind="with: model">
  <div class="control-group">
    <label class="control-label" for="inputName">Name</label>
    <div class="controls">
      <input type="text" id="inputName" placeholder="Enter name" class="input-xlarge" data-bind="value: name" />
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputEmail">Email</label>
    <div class="controls">
      <input type="email" id="inputEmail" placeholder="Enter email" class="input-xlarge" data-bind="value: email" />
    </div>
  </div>
</form>