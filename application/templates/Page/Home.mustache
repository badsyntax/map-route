<div class="container">

  <div class="navbar">
    <div class="navbar-inner">
      
      <div class="btn-group pull-right">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="icon-user"></i> admin         <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><a href="/admin/auth/profile">Profile</a></li>
          <li class="divider"></li>
          <li><a href="/admin/auth/signout">Sign out</a></li>
        </ul>
      </div>

      <!-- Toolbar -->
      <div 
        id="toolbar" 
        data-bind="template: { name: 'toolbar-template' }">
      </div>
    </div>
  </div>
  
  <!-- Map -->
  <div id="map-canvas" class="map">
    <div class="message">
      <div class="has-js">
        Loading map...
      </div>
      <div class="no-js">
        <strong>You need to enable Javascript in your browser to use this application.</strong>
      </div>
    </div>
  </div>

  <!-- Sidebar -->
  <aside 
    class="sidebar" 
    id="sidebar"
    data-bind="template: { name: 'sidebar-template' }">
  </aside>
</div>

<!-- Modal -->
<div 
  id="modal" 
  data-bind="template: { name: 'modal-template' }">
</div>

<!-- Templates -->
<script type="text/html" id="toolbar-template">
{{>toolbar}}
</script>
<script type="text/html" id="modal-template">
{{>modal}}
</script>
<script type="text/html" id="modal-edit-marker">
{{>modal/marker/edit}}
</script>
<script type="text/html" id="modal-login">
{{>modal/login}}
</script>
<script type="text/html" id="modal-share">
{{>modal/share}}
</script>
<script type="text/html" id="map-infowindow-edit-template">
{{>infowindow/edit}}
</script>
<script type="text/html" id="map-infowindow-view-template">
{{>infowindow/view}}
</script>
<script type="text/html" id="sidebar-template">
{{>sidebar}}
</script>